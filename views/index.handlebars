<div class="row center">
    <h1>Devour Burgers!</h1>
</div>
<div class="row">
  <div class="center">
    <img src="assets/img/burger.jpg" alt="Burger">
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <h2>Add a Burger</h2>
  </div>
  <div class="col-md-5">
    <form class="create-form">

      <div class="form-group label">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <div class="form-group">
        <label for="devoured" class="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not yet Eaten
      </div>

      <button type="submit" class="btn btn-secondary">Add Burger <i class="fas fa-hamburger"></i></button>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h2>Burgers yet to be eaten!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <h2>Burgers that have been devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
